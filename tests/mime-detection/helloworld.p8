cls(b)
repeat
  -- say hi ♥
  x = rnd(sw + tw) - tw/2
  y = rnd(sh + th) - th/2
  c = rnd(14)+2
  print(t, x, y, c)

  -- wait a few frames
  for j=0,d do
    flip()
  end

  -- two timed display modes
  -- clear screen regularly
  i += 1
  if i > 20 then
    i = 0
    d = 5
  elseif i == 10 then
    d = 20
  elseif i > 10 then
    cls(b)
  end
until false


